- content_for :head do

  :css
    /**
     * parallax.css
     * @Author Original @msurguy -> http://bootsnipp.com/snippets/featured/parallax-login-form
     * @Reworked By @kaptenn_com
     * @package PARALLAX LOGIN.
     */

    body {
        background-color: #fff;
    }
    .form-signin input[type="text"] {
        margin-bottom: 5px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }
    .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
    .form-signin .form-control {
        position: relative;
        font-size: 16px;
        font-family: 'Open Sans', Arial, Helvetica, sans-serif;
        height: auto;
        padding: 10px;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }
    .vertical-offset-100 {
        padding-top: 100px;
    }
    .img-responsive {
      display: block;
      max-width: 100%;
      height: auto;
      margin: auto;
    }
    .panel {
      margin-bottom: 20px;
      background-color: rgba(255, 255, 255, 0.75);
      border: 1px solid transparent;
      border-radius: 4px;
      -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
      box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
    }


.row.vertical-offset-100
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        .row-fluid.user-row
          %img.img-responsive{:alt => "Conxole Admin", :src => asset_path("logo.png")}/
      .panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin", "accept-charset" => "UTF-8", role: "form") do |f|
          %fieldset
            %label.panel-login
              .login_result
            = f.email_field :email, autofocus: true, id: "email", class: "form-control", placeholder: "email"
            = f.password_field :password, autocomplete: "off", id: "password", class: "form-control", placeholder: "password"
            %br
            %input#login.btn.btn-lg.btn-success.btn-block{:type => "submit", :value => "Sign in"}
